<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.example.mypc.reshimbandh.Fragments.StepThreeRegFragment">
<!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:background="@color/colorDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/third_nav"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/size_20"
        >
        <!-- First name-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minimum Height(CMS)"
            android:layout_marginTop="@dimen/size_10"
            />
        <EditText
            android:id="@+id/edit_reg_step1_firstname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:background="@null"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"/>

        <!-- Last name-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maximum Height"
            android:layout_marginTop="@dimen/size_10"
            />
        <EditText
            android:id="@+id/edit_reg_step1_lastname"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:background="@null"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"/>

        <!-- Eamil-->
        <TextView
            android:id="@+id/edit_reg_step1_eamil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mother Tongue"
            android:layout_marginTop="@dimen/size_10"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            android:background="@null"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <!-- password-->
                <TextView
                    android:id="@+id/edit_reg_step1_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Minimum age Difference"
                    android:layout_marginTop="@dimen/size_10"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height"
                    android:background="@null"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray"/>

            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorGray"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <!-- Confirm Password-->
                <TextView
                    android:id="@+id/edit_reg_step1_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Minimum age Difference"
                    android:layout_marginTop="@dimen/size_10"
                    android:layout_marginLeft="@dimen/size_5"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height"
                    android:background="@null"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray"/>

            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <!-- phone number-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Marital Status"
                    android:layout_marginTop="@dimen/size_10"
                    />
                <Spinner
                    android:id="@+id/marital_status_spinner_3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray"/>

            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorGray"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <!-- Date of Birth-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/string_religion"
                    android:layout_marginTop="@dimen/size_10"
                    android:layout_marginLeft="@dimen/size_5"
                    />
                <Spinner
                    android:id="@+id/religion_3_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray"/>

            </LinearLayout>
        </LinearLayout>
        <!-- Cast-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Physical Disibility "
            android:layout_marginTop="@dimen/size_10"
            />
        <Spinner
            android:id="@+id/physical_3_spinner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_text_height"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <!-- password-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/string_cast"
                    android:layout_marginTop="@dimen/size_10"
                    />
                <Spinner
                    android:id="@+id/cast_3_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_40"

                    />


                <View
                    android:layout_width="match_parent"

                    android:layout_height="1dp"
                    android:background="@color/colorGray"/>

            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorGray"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                >
                <!-- Confirm Password-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/string_subcast"
                    android:layout_marginTop="@dimen/size_10"
                    android:layout_marginLeft="@dimen/size_5"
                    />

                <EditText
                    android:id="@+id/subcast_3_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_40"
                    android:background="@null"
                    >

                </EditText>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray"/>


            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/string_qual1"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_5"
            />

        <Spinner
            android:id="@+id/qualification_3_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"/>
         <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Candidate Working"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginLeft="@dimen/size_5"
            />

        <Spinner
            android:id="@+id/working_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"/>
        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorDark"
            android:text="Register"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/size_10"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            />
    </LinearLayout>
</ScrollView>
    </LinearLayout>

</FrameLayout>

