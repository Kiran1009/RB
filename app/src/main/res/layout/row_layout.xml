<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="@dimen/size_0"
            android:layout_height="@dimen/size_150"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:layout_margin="@dimen/size_5"
            >
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/size_100"
                android:layout_height="@dimen/size_100"

                android:layout_gravity="center"
                 />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="@dimen/size_10">
                <ImageView
                    android:id="@+id/action_image1"
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                   />
                <ImageView
                    android:id="@+id/action_image2"
                    android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
                   />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/size_140"
            android:layout_weight="1.4"
            android:gravity="left"
            android:orientation="vertical"
            android:layout_margin="@dimen/size_5"
            >
            <TextView
                android:id="@+id/profile_name"
                android:text="Dipeka Kharote"
                android:textStyle="bold"
                android:textSize="@dimen/size_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/list_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 km away"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/size_10"/>
            <TextView
                android:id="@+id/list_desc"
                android:layout_width="match_parent"
                android:text="23 year,5ft/152 CMs,\nHindu:Brahmin Palwal, Haryana,India"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/action_image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_50"
                />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/colorGray"/>
</LinearLayout>

